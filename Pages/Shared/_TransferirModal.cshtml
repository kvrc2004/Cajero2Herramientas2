<!-- Modal para Transferir Dinero -->
<div class="modal fade" id="transferirModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exchange-alt me-2"></i>
                    Transferir Dinero
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formTransferir">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">
                                <i class="fas fa-arrow-up me-1"></i>
                                Cuenta Origen
                            </h6>
                            <div class="mb-3">
                                <label class="form-label">Selecciona tu cuenta</label>
                                <select class="form-select" id="cuentaOrigen" required>
                                    <option value="">Selecciona una cuenta</option>
                                    @foreach (var cuenta in Model.ClienteLogueado!.Cuentas)
                                    {
                                        @if (!(cuenta is MiBanco.Models.TarjetaCredito))
                                        {
                                            <option value="@cuenta.Id" data-saldo="@cuenta.Saldo">
                                                @cuenta.ObtenerTipoCuenta() - @cuenta.NumeroCuenta 
                                                (Saldo: $@cuenta.Saldo.ToString("N0"))
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <h6 class="text-success">
                                <i class="fas fa-arrow-down me-1"></i>
                                Cuenta Destino
                            </h6>
                            <div class="mb-3">
                                <label class="form-label">Número de cuenta destino</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="cuentaDestino" 
                                           placeholder="Ej: AH000001, CC000002, TC000003" required>
                                    <button type="button" class="btn btn-outline-secondary" id="btnBuscarCuenta">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div id="infoCuentaDestino" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>
                                    Monto a transferir
                                </label>
                                <input type="number" class="form-control" id="montoTransferir" 
                                       min="1" step="0.01" placeholder="0.00" required>
                                <div class="form-text" id="infoDisponibleTransfer">Selecciona cuenta origen para ver disponible</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-comment me-1"></i>
                                    Descripción (opcional)
                                </label>
                                <input type="text" class="form-control" id="descripcionTransferir" 
                                       placeholder="Descripción de la transferencia" maxlength="200">
                            </div>
                        </div>
                    </div>
                    
                    <div id="resultadoTransferir" class="alert" style="display: none;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnConfirmarTransfer" disabled>
                        <i class="fas fa-check me-2"></i>
                        Transferir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>