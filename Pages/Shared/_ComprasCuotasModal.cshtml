<!-- Modal para Compras en Cuotas -->
<div class="modal fade" id="comprasCuotasModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-shopping-cart me-2"></i>
                    Compras en Cuotas - Tarjeta de Crédito
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formComprarCuotas">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-credit-card me-1"></i>
                                    Tarjeta de crédito
                                </label>
                                <select class="form-select" id="tarjetaCredito" required>
                                    <option value="">Selecciona tu tarjeta</option>
                                    @foreach (var cuenta in Model.ClienteLogueado!.Cuentas)
                                    {
                                        @if (cuenta is MiBanco.Models.TarjetaCredito tarjeta)
                                        {
                                            <option value="@cuenta.Id" data-disponible="@tarjeta.CreditoDisponible">
                                                @cuenta.NumeroCuenta 
                                                (Disponible: $@tarjeta.CreditoDisponible.ToString("N0"))
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>
                                    Monto de la compra
                                </label>
                                <input type="number" class="form-control" id="montoCompra" 
                                       min="1" step="0.01" placeholder="0.00" required>
                                <div class="form-text" id="infoDisponibleCompra">Selecciona una tarjeta para ver el crédito disponible</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-comment me-1"></i>
                                    Descripción de la compra
                                </label>
                                <input type="text" class="form-control" id="descripcionCompra" 
                                       placeholder="Ej: Compra en supermercado" maxlength="200" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    Número de cuotas
                                </label>
                                <select class="form-select" id="numeroCuotas" required>
                                    <option value="">Selecciona las cuotas</option>
                                    <option value="1">1 cuota (Sin interés)</option>
                                    <option value="2">2 cuotas (Sin interés)</option>
                                    <option value="3">3 cuotas (1.9% mensual)</option>
                                    <option value="4">4 cuotas (1.9% mensual)</option>
                                    <option value="5">5 cuotas (1.9% mensual)</option>
                                    <option value="6">6 cuotas (1.9% mensual)</option>
                                    <option value="7">7 cuotas (2.3% mensual)</option>
                                    <option value="8">8 cuotas (2.3% mensual)</option>
                                    <option value="9">9 cuotas (2.3% mensual)</option>
                                    <option value="10">10 cuotas (2.3% mensual)</option>
                                    <option value="12">12 cuotas (2.3% mensual)</option>
                                    <option value="18">18 cuotas (2.3% mensual)</option>
                                    <option value="24">24 cuotas (2.3% mensual)</option>
                                    <option value="36">36 cuotas (2.3% mensual)</option>
                                </select>
                            </div>
                            
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-calculator me-1"></i>
                                        Simulador de Cuotas
                                    </h6>
                                </div>
                                <div class="card-body" id="simuladorCuotas">
                                    <p class="text-muted">Ingresa el monto y selecciona las cuotas para ver la simulación.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Tasas de Interés:</h6>
                            <ul class="mb-0">
                                <li><strong>1-2 cuotas:</strong> Sin interés (0%)</li>
                                <li><strong>3-6 cuotas:</strong> 1.9% de interés mensual</li>
                                <li><strong>7+ cuotas:</strong> 2.3% de interés mensual</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div id="resultadoCompra" class="alert" style="display: none;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Realizar Compra
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>