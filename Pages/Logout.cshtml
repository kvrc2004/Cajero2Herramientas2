@page
@model MiBanco.Pages.LogoutModel
@{
    ViewData["Title"] = "Cerrar Sesión - Mi Plata";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>
                <i class="fas fa-sign-out-alt me-2"></i>
                Cerrando Sesión
            </h2>
        </div>
        <div class="text-center py-4">
            <div class="mb-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Procesando...</span>
                </div>
            </div>
            <h5 class="mb-3">Cerrando tu sesión de forma segura...</h5>
            <p class="text-muted">Serás redirigido automáticamente.</p>
            <div class="mt-4">
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Redirigir automáticamente después de un breve momento
        setTimeout(function() {
            window.location.href = '/';
        }, 3000);
        
        // Mostrar un contador regresivo
        let contador = 3;
        const elemento = document.querySelector('.text-muted');
        const intervalo = setInterval(() => {
            elemento.textContent = `Redirigiendo en ${contador} segundos...`;
            contador--;
            if (contador < 0) {
                clearInterval(intervalo);
                elemento.textContent = 'Redirigiendo...';
            }
        }, 1000);
    </script>
}