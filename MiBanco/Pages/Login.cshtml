@page
@model MiBanco.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión - Mi Plata";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>
                <i class="fas fa-sign-in-alt me-2"></i>
                Iniciar Sesión
            </h2>
            <p class="text-muted">Accede a tu cuenta de Mi Plata</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            @if (!string.IsNullOrEmpty(Model.LoginViewModel.MensajeError))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @Model.LoginViewModel.MensajeError
                </div>
            }

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["Info"]
                </div>
            }

            <div class="mb-3">
                <label asp-for="LoginViewModel.Usuario" class="form-label">
                    <i class="fas fa-user me-1"></i>
                    Usuario
                </label>
                <input asp-for="LoginViewModel.Usuario" class="form-control" placeholder="Ingresa tu usuario" />
                <span asp-validation-for="LoginViewModel.Usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LoginViewModel.Clave" class="form-label">
                    <i class="fas fa-lock me-1"></i>
                    Clave
                </label>
                <input asp-for="LoginViewModel.Clave" class="form-control" placeholder="Ingresa tu clave" />
                <span asp-validation-for="LoginViewModel.Clave" class="text-danger"></span>
            </div>

            @if (Model.LoginViewModel.IntentosRestantes < 3)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Advertencia:</strong> Te quedan @Model.LoginViewModel.IntentosRestantes intento(s) antes de que tu cuenta sea bloqueada.
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Iniciar Sesión
                </button>
            </div>
        </form>

        <div class="auth-footer">
            <hr>
            <div class="text-center">
                <p class="mb-2">¿No tienes una cuenta?</p>
                <a asp-page="/Registro" class="btn btn-outline-success">
                    <i class="fas fa-user-plus me-2"></i>
                    Crear cuenta nueva
                </a>
            </div>
            <div class="text-center mt-3">
                <a asp-page="/Index" class="text-muted">
                    <i class="fas fa-arrow-left me-1"></i>
                    Volver al inicio
                </a>
            </div>
        </div>
    </div>
</div>

<div class="info-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="info-card">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-shield-alt text-primary me-2"></i>
                        Tu seguridad es nuestra prioridad
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="security-feature">
                                <i class="fas fa-lock text-success me-2"></i>
                                <strong>Protección de cuenta:</strong> Máximo 3 intentos de login
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="security-feature">
                                <i class="fas fa-key text-success me-2"></i>
                                <strong>Encriptación:</strong> Datos protegidos con tecnología avanzada
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}