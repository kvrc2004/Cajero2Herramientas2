<!-- Modal para Ver Movimientos -->
<div class="modal fade" id="movimientosModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-history me-2"></i>
                    Historial de Movimientos
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Filtrar por cuenta:</label>
                    <select class="form-select" id="filtroMovimientos">
                        <option value="">Todas las cuentas</option>
                        @foreach (var cuenta in Model.ClienteLogueado!.Cuentas)
                        {
                            <option value="@cuenta.Id">
                                @cuenta.ObtenerTipoCuenta() - @cuenta.NumeroCuenta
                            </option>
                        }
                    </select>
                </div>
                
                <div id="listaMovimientos" class="mt-3" style="max-height: 400px; overflow-y: auto;">
                    @{
                        bool hayMovimientos = false;
                    }
                    
                    @foreach (var cuenta in Model.ClienteLogueado.Cuentas)
                    {
                        @for (int i = cuenta.Movimientos.Count - 1; i >= 0; i--)
                        {
                            var movimiento = cuenta.Movimientos[i];
                            hayMovimientos = true;
                            <div class="movement-item @(movimiento.EsCredito() ? "credit" : "debit")" data-cuenta="@cuenta.Id">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <small class="text-muted">@movimiento.Fecha.ToString("dd/MM/yyyy")</small><br>
                                        <small class="text-muted">@movimiento.Fecha.ToString("HH:mm")</small>
                                    </div>
                                    <div class="col-md-2">
                                        <strong>@movimiento.Tipo</strong><br>
                                        <small class="text-muted">@cuenta.ObtenerTipoCuenta()</small>
                                    </div>
                                    <div class="col-md-4">
                                        <span>@movimiento.Descripcion</span><br>
                                        <small class="text-muted">Cuenta: @cuenta.NumeroCuenta</small>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <h6 class="mb-0 @(movimiento.EsCredito() ? "text-success" : "text-danger")">
                                            @(movimiento.EsCredito() ? "+" : "-")$@movimiento.Monto.ToString("N2")
                                        </h6>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <small class="text-muted">Saldo anterior:</small><br>
                                        <small>$@movimiento.SaldoAnterior.ToString("N2")</small><br>
                                        <small class="text-muted">Saldo nuevo:</small><br>
                                        <strong>$@movimiento.SaldoNuevo.ToString("N2")</strong>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    
                    @if (!hayMovimientos)
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>No hay movimientos registrados.</p>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>